<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RLRegisterUser"
    android:background="@drawable/color_gradient"
    tools:context=".RegisterUserName">

        <RelativeLayout
            android:id="@+id/RLCardView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:background="@color/White"></RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewRegisterUser"
            android:layout_width="332.5dp"
            android:layout_height="460dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="10dp"
            app:cardElevation="7dp">


            <EditText
                android:id="@+id/NewUserName"
                android:layout_width="257dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:background="@drawable/drawable_edittext"
                android:ems="10"
                android:fontFamily="@font/newfont"
                android:gravity="right"
                android:hint="שם משתמש"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:textColor="@color/BorderColor"
                android:textColorHint="@color/hintColor"
                android:textSize="29dp" />


            <EditText
                android:id="@+id/NewUserPassword"
                android:layout_width="257dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/drawable_edittext"
                android:ems="10"
                android:fontFamily="@font/newfont"
                android:gravity="right"
                android:hint="סיסמה"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:textColor="@color/BorderColor"
                android:textColorHint="@color/hintColor"
                android:textSize="29dp" />


            <EditText
                android:id="@+id/RePassword"
                android:layout_width="257dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="110dp"
                android:background="@drawable/drawable_edittext"
                android:ems="10"
                android:fontFamily="@font/newfont"
                android:gravity="right"
                android:hint="אימות סיסמה"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:textColor="@color/BorderColor"
                android:textColorHint="@color/hintColor"
                android:textSize="29dp" />


            <Button
                android:id="@+id/createBtn"
                android:layout_width="257dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="180dp"
                android:background="@drawable/drawable_button"
                android:fontFamily="@font/newfont"
                android:textSize="29dp"
                android:text="אישור" />


            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="173.1dp"
                android:layout_height="71.4dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="45dp"
                android:background="@drawable/findpairlogo" />

        </androidx.cardview.widget.CardView>



</RelativeLayout>