<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LoginRLayout"
    tools:context=".LogIn"
    android:background="@drawable/color_gradient">


  <RelativeLayout
      android:id="@+id/RLCardView"
      android:layout_width="match_parent"
      android:layout_height="440dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="210dp"
      android:background="@color/White"></RelativeLayout>


  <androidx.cardview.widget.CardView
      android:id="@+id/CardViewLogIn"
      android:layout_width="332.5dp"
      android:layout_height="364dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="75dp"
      app:cardBackgroundColor="@color/White"
      app:cardCornerRadius="10dp"
      app:cardElevation="7dp">


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="173.1dp"
        android:layout_height="71.4dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="45dp"
        android:background="@drawable/findpairlogo" />


    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="25.7dp"
        android:layout_height="27.1dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="195dp"
        android:background="@drawable/usericon" />


    <EditText
        android:id="@+id/UserName"
        android:layout_width="195dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/BorderColor"
        android:ems="10"
        android:fontFamily="@font/newfont"
        android:gravity="left"
        android:hint="שם משתמש"
        android:inputType="textPersonName"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/BorderColor"
        android:textColorHint="@color/hintColor"
        android:textSize="29dp" />


    <ImageView
        android:id="@+id/imageViewPass"
        android:layout_width="20dp"
        android:layout_height="37.4dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/passicon" />

    <EditText
        android:id="@+id/UserPassword"
        android:layout_width="195dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:backgroundTint="@color/BorderColor"
        android:fontFamily="@font/newfont"
        android:gravity="left"
        android:hint="סיסמה"
        android:inputType="textPassword"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/BorderColor"
        android:textColorHint="@color/hintColor"
        android:textSize="29dp" />




  </androidx.cardview.widget.CardView>


  <Button
      android:id="@+id/logInBtn"
      android:layout_width="230dp"
      android:layout_height="50dp"
      android:layout_centerHorizontal="true"
      android:layout_gravity="bottom|center"
      android:layout_marginTop="470dp"
      android:layout_marginBottom="30dp"
      android:background="@drawable/drawable_button"
      android:fontFamily="@font/newfont"
      android:paddingBottom="5dp"
      android:text="כניסה"
      android:textColor="@color/White"
      android:textSize="29dp" />


  <TextView
      android:id="@+id/TVOR"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center|bottom"
      android:layout_marginTop="530dp"
      android:layout_marginBottom="95dp"
      android:fontFamily="@font/newfont"
      android:text="אם אין לך חשבון"
      android:textColor="@color/Note"
      android:textSize="22dp" />


  <Button
      android:id="@+id/registerBtn"
      android:layout_width="230dp"
      android:layout_height="50dp"
      android:layout_centerHorizontal="true"
      android:layout_gravity="bottom|center"
      android:layout_marginLeft="110dp"
      android:layout_marginTop="570dp"
      android:layout_marginBottom="30dp"
      android:background="@drawable/drawable_button_empty"
      android:fontFamily="@font/newfont"
      android:paddingBottom="5dp"
      android:text="הרשמה"
      android:textColor="@color/BorderColor"
      android:textSize="29dp" />





</RelativeLayout>